{% extends '::basemenu.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('bundles/app/css/jquery.dataTables_themeroller.css')}}" />
    <link rel="stylesheet" href="{{asset('bundles/app/css/focal.css')}}" />
{% endblock %}      
{% block header -%}
    Profesiones
    <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
        Agregar nuevas Profesiones
    </small>
{% endblock %}
{% block content -%}
    <ul style="list-style: none; margin-left: 0">
        <li>
            <a class="btn btn-md btn-success" href="{{ path('adprofesiones_new') }}">
                <i class="ace-icon fa fa-plus-square align-top bigger-120"></i> Nuevo
            </a> 
        </li>
    </ul>    
    <div class="table-header">
        Listado de profesiones
    </div>              
    <table id="dynamic-table" class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="#">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul>
                    <!--li>
                        <a href="{#{ path('adprofesiones_show', { 'id': entity.id }) }#}">show</a>
                    </li-->
                    <li class="lista-horizontal-action">
                        <a href="{{ path('adprofesiones_edit', { 'id': entity.id }) }}" title="Editar registro">
                        <i class="ace-icon fa fa-pencil align-top bigger-120"></i>
                        </a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/jquery.dataTables.min.js')}}"></script>
    <script src="{{ asset('bundles/app/js/jquery.dataTables.bootstrap.min.js')}}"></script> 
    
    <script type="text/javascript">
        var table;
        $(document).ready(function() {
            table = $('#dynamic-table').DataTable({
                language:{
                    search: "Buscar",
                    lengthMenu: "Mostrar _MENU_ registros",
                    emptyTable: "No hay datos...",
                    info: "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    infoEmpty: "Mostrando registros del 0 al 0 de un total de 0 registros",
                    infoFiltered: "(Filtrando de un total de _MAX_ registros)",
                    paginate: {
                        first: "Primero",
                        previous: "Anterior",
                        next: "Siguiente",
                        last: "Ultimo"
                    }
                }
            });
        });
    </script>    
{% endblock %} 